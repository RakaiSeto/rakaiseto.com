---
import experiences from "../collections/experiences.json";
import organizations from "../collections/organizations.json";
import educations from "../collections/education.json";
import AboutExperience from "../components/about-experience.astro";
import PageHeading from "../components/page-heading.astro";
import Layout from "../layouts/main.astro";
import DownloadButton from "../components/download-button.astro";
---

<Layout title="About Me">
  <section class="relative z-20 max-w-2xl mx-auto my-12 px-7 lg:px-0">
    <PageHeading
      title="About Me"
      description="Hello 👋 I'm a passionate fullstack developer with 2 years of working experience. Specializing in Go, PostgreSQL, Redis, Laravel, and RabbitMQ. Driven to continuously learning new skills and technologies."
    /> 
    <DownloadButton target="_blank" text="Download CV" link="/download" />

    <img src="/assets/images/about.jpg" class="relative z-30 w-full my-10 rounded-xl" />

    <!-- <h2 class="mb-2 text-2xl font-bold dark:text-neutral-200">Short Bio</h2>
    <p
      class="text-sm leading-6 text-gray-600 dark:text-neutral-400 sm:leading-7 lg:leading-8 sm:text-base lg:text-lg"
    >
      Front-end cutter 🧑🏻‍💻, back-end amateur 🤷🏻‍♂️, operations digging holes person 🤦🏻‍♂️.
    </p> -->

    <h2
      class="mt-5 mb-2 text-2xl font-bold lg:mt-10 sm:mt-6 dark:text-neutral-200"
    >
      Experience
    </h2>
    <div class="px-5 py-10">
      {
        experiences.map((experience, index) => {
          // if last index, add no border
          const isLast = index === experiences.length - 1;

          // return experience
          return (
            <div class={`${isLast ? "" : "pb-10"} border-l border-gray-200 "last:border-l-0" dark:border-neutral-700`}>
              <AboutExperience
                dates={experience.dates}
                role={experience.role}
                company={experience.company}
                description={experience.description}
                logo={experience.logo}
              />
            </div>
          )
        })
      }
    </div>

    <h2
    class="mt-5 mb-2 text-2xl font-bold lg:mt-10 sm:mt-6 dark:text-neutral-200"
  >
    Educations
  </h2>
  <div class="px-5 py-10">
    {
      educations.map((org, index) => {
        // if last index, add no border
        const isLast = index === educations.length - 1;

        // return experience
        return (
          <div class={`${isLast ? "" : "pb-10"} border-l border-gray-200 "last:border-l-0" dark:border-neutral-700`}>
            <AboutExperience
              dates={org.dates}
              role={org.role}
              company={org.company}
              description={org.description}
              logo={org.logo}
            />
          </div>
        )
      })
    }
  </div>

    <h2
      class="mt-5 mb-2 text-2xl font-bold lg:mt-10 sm:mt-6 dark:text-neutral-200"
    >
      Organizations
    </h2>
    <div class="px-5 py-10">
      {
        organizations.map((org, index) => {
          // if last index, add no border
          const isLast = index === organizations.length - 1;

          // return experience
          return (
            <div class={`${isLast ? "" : "pb-10"} border-l border-gray-200 "last:border-l-0" dark:border-neutral-700`}>
              <AboutExperience
                dates={org.dates}
                role={org.role}
                company={org.company}
                description={org.description}
                logo={org.logo}
              />
            </div>
          )
        })
      }
    </div>

    <h2 class="mt-5 mb-2 text-2xl font-bold lg:mt-10 sm:mt-6 dark:text-neutral-200">Let's Connect</h2>
    <p
      class="text-sm leading-6 text-gray-600 dark:text-neutral-400 sm:leading-7 lg:leading-8 sm:text-base lg:text-lg"
    >
      If you want to stay up to date with my work be sure to <a
        href="https://linkedin.com/in/rakaiseto"
        target="_blank"
        class="text-indigo-600 underline">follow me on LinkedIn</a
      >, or you can send me an <a href="mailto:rakaiseto@gmail.com" class="text-indigo-600 underline"
        >email</a
      > and I'll be sure to get back to you.
    </p>
  </section>
</Layout>
